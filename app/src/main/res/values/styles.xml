<resources xmlns:tools = "http://schemas.android.com/tools">

    <!-- Base application theme. -->
	<style name = "AppTheme" parent = "Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
		<item name = "colorPrimary">@color/colorPrimary</item>
        <item name = "colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name = "colorAccent">@color/colorAccent</item>
		<item name = "android:windowLightStatusBar" tools:targetApi = "m">true</item> //white
		<item name = "android:windowLightNavigationBar" tools:targetApi = "o_mr1">true</item> //white
    </style>
	<style name = "AppTheme.TextViews" parent="AppTheme">
		<item name = "android:layout_width">match_parent</item>
		<item name = "android:layout_height">wrap_content</item>
		<item name = "android:layout_marginTop">16dp</item>
		<item name = "android:fontFamily">@font/alegreya_sans_sc</item>
		<item name = "android:paddingTop">8dp</item>
		<item name = "android:textAlignment">center</item>
		<item name = "android:textColor">@android:color/black</item>
		<item name = "android:textSize">20sp</item>
	</style>
	<style name = "AppTheme.BodyTextViews" parent="AppTheme">
		<item name = "android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name = "android:textSize">18sp</item>
		<item name="android:textColor">@android:color/background_dark</item>
		<item name = "android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
		<item name = "android:fontFamily">@font/gurajada</item>
		<item name = "android:textAlignment">center</item>
	</style>

</resources>
